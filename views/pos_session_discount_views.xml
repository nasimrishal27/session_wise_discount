<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_pos_session_form_inherit_discount_limit" model="ir.ui.view">
        <field name="name">pos.session.form.inherit.discount</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="session_discount_limit" invisible="1"/>
                <field name="session_discount_limit_amount" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
